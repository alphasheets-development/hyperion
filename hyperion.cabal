  exposed-modules: Hyperion
  build-depends:
    base >= 4.9 && < 5,
    deepseq >= 1.4,
    mtl >= 2.2,
    vector >= 0.11
  default-language: Haskell2010

source-repository head
  type:     git
  location: https://github.com/tweag/hyperion
